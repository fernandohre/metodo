<grammars:project xmlns:grammars="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <grammars:modelVersion>4.0.0</grammars:modelVersion>
    <grammars:groupId>com.khubla.antlr</grammars:groupId>
    <grammars:artifactId>antlr4test-maven-plugin</grammars:artifactId>
    <grammars:packaging>maven-plugin</grammars:packaging>
    <grammars:version>1.11-SNAPSHOT</grammars:version>
    <grammars:name>khubla.com Antlr4 test mojo</grammars:name>
    <grammars:description>antlr4test-maven-plugin is a maven mojo for testing Antlr4 grammars</grammars:description>
    <grammars:url>https://github.com/antlr/antlr4test-maven-plugin</grammars:url>
    <grammars:developers>
        <grammars:developer>
            <grammars:id>teverett</grammars:id>
            <grammars:name>Tom Everett</grammars:name>
            <grammars:email>tom@khubla.com</grammars:email>
        </grammars:developer>
    </grammars:developers>
    <grammars:licenses>
        <grammars:license>
            <grammars:name>BSD 3-Clause License</grammars:name>
            <grammars:url>https://opensource.org/licenses/BSD-3-Clause</grammars:url>
            <grammars:distribution>repo</grammars:distribution>
        </grammars:license>
    </grammars:licenses>
    <grammars:scm>
        <grammars:url>https://github.com/antlr/antlr4test-maven-plugin.git</grammars:url>
    </grammars:scm>
    <grammars:organization>
        <grammars:name>antlr</grammars:name>
        <grammars:url>https://github.com/antlr</grammars:url>
    </grammars:organization>
    <grammars:properties>
        <grammars:maven.version>3.5.2</grammars:maven.version>
        <grammars:antlr.version>4.7.1</grammars:antlr.version>
    </grammars:properties>
    <grammars:dependencies>
        <grammars:dependency>
            <grammars:groupId>org.antlr</grammars:groupId>
            <grammars:artifactId>antlr4-runtime</grammars:artifactId>
            <grammars:version>${antlr.version}</grammars:version>
            <grammars:type>jar</grammars:type>
            <grammars:scope>compile</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.apache.maven</grammars:groupId>
            <grammars:artifactId>maven-plugin-api</grammars:artifactId>
            <grammars:version>${maven.version}</grammars:version>
            <grammars:scope>provided</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.apache.maven.plugin-testing</grammars:groupId>
            <grammars:artifactId>maven-plugin-testing-harness</grammars:artifactId>
            <grammars:version>3.3.0</grammars:version>
            <grammars:scope>test</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.apache.maven</grammars:groupId>
            <grammars:artifactId>maven-core</grammars:artifactId>
            <grammars:version>${maven.version}</grammars:version>
            <grammars:scope>provided</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.apache.maven</grammars:groupId>
            <grammars:artifactId>maven-compat</grammars:artifactId>
            <grammars:version>${maven.version}</grammars:version>
            <grammars:scope>test</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.apache.maven.plugin-tools</grammars:groupId>
            <grammars:artifactId>maven-plugin-annotations</grammars:artifactId>
            <grammars:version>3.5</grammars:version>
            <grammars:scope>provided</grammars:scope>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.antlr</grammars:groupId>
            <grammars:artifactId>antlr4</grammars:artifactId>
            <grammars:version>${antlr.version}</grammars:version>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>commons-io</grammars:groupId>
            <grammars:artifactId>commons-io</grammars:artifactId>
            <grammars:version>2.6</grammars:version>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.codehaus.plexus</grammars:groupId>
            <grammars:artifactId>plexus-utils</grammars:artifactId>
            <grammars:version>3.1.0</grammars:version>
        </grammars:dependency>
        <grammars:dependency>
            <grammars:groupId>org.bitbucket.cowwoc</grammars:groupId>
            <grammars:artifactId>diff-match-patch</grammars:artifactId>
            <grammars:version>1.1</grammars:version>
        </grammars:dependency>
    </grammars:dependencies>
    <grammars:build>
        <grammars:plugins>
            <grammars:plugin>
                <grammars:artifactId>maven-compiler-plugin</grammars:artifactId>
                <grammars:version>3.1</grammars:version>
                <grammars:configuration>
                    <grammars:source>1.6</grammars:source>
                    <grammars:target>1.6</grammars:target>
                </grammars:configuration>
            </grammars:plugin>
            <grammars:plugin>
                <grammars:groupId>org.apache.maven.plugins</grammars:groupId>
                <grammars:artifactId>maven-plugin-plugin</grammars:artifactId>
                <grammars:version>3.3</grammars:version>
                <grammars:configuration>
                    <grammars:goalPrefix>antlr4test</grammars:goalPrefix>
                </grammars:configuration>
                <grammars:executions>
                    <grammars:execution>
                        <grammars:id>default-descriptor</grammars:id>
                        <grammars:goals>
                            <grammars:goal>descriptor</grammars:goal>
                        </grammars:goals>
                        <grammars:phase>process-classes</grammars:phase>
                    </grammars:execution>
                    <grammars:execution>
                        <grammars:id>help-descriptor</grammars:id>
                        <grammars:goals>
                            <grammars:goal>helpmojo</grammars:goal>
                        </grammars:goals>
                        <grammars:phase>process-classes</grammars:phase>
                    </grammars:execution>
                </grammars:executions>
            </grammars:plugin>
            <grammars:plugin>
                <grammars:groupId>org.antlr</grammars:groupId>
                <grammars:artifactId>antlr4-maven-plugin</grammars:artifactId>
                <grammars:version>${antlr.version}</grammars:version>
                <grammars:configuration>
                    <!-- directory generated-test-sources not possible with GrammarTestMojo using ClassLoader focused on /target/classes <outputDirectory>${project.build.directory}/generated-test-sources/antlr4</outputDirectory> -->
                    <grammars:sourceDirectory>src/test/resources/</grammars:sourceDirectory>
                    <grammars:grammars>chat.g4</grammars:grammars>
                </grammars:configuration>
                <grammars:executions>
                    <grammars:execution>
                        <grammars:id>antlr4-test-resources</grammars:id>
                        <!-- phase generate-test-sources not possible with GrammarTestMojo using ClassLoader focused on /target/classes <phase>generate-test-sources</phase> -->
                        <grammars:goals>
                            <grammars:goal>antlr4</grammars:goal>
                        </grammars:goals>
                    </grammars:execution>
                </grammars:executions>
            </grammars:plugin>
            <grammars:plugin>
                <grammars:artifactId>maven-antrun-plugin</grammars:artifactId>
                <grammars:version>1.8</grammars:version>
                <grammars:executions>
                    <grammars:execution>
                        <!-- delete from classes in phase prepare-package because test-classes could not be used with GrammarTestMojo using ClassLoader focused on /target/classes -->
                        <grammars:id>delete-test-resources</grammars:id>
                        <grammars:phase>prepare-package</grammars:phase>
                        <grammars:goals>
                            <grammars:goal>run</grammars:goal>
                        </grammars:goals>
                        <grammars:configuration>
                            <grammars:target>
                                <grammars:delete>
                                    <grammars:fileset dir="${project.build.outputDirectory}">
                                        <grammars:include name="chat*" />
                                    </grammars:fileset>
                                </grammars:delete>
                            </grammars:target>
                        </grammars:configuration>
                    </grammars:execution>
                </grammars:executions>
            </grammars:plugin>
        </grammars:plugins>
        <grammars:finalName>${project.artifactId}-${project.version}</grammars:finalName>
    </grammars:build>
    <grammars:profiles>
        <grammars:profile>
            <grammars:id>deploy</grammars:id>
            <grammars:build>
                <grammars:plugins>
                    <grammars:plugin>
                        <grammars:groupId>org.sonatype.plugins</grammars:groupId>
                        <grammars:artifactId>nexus-staging-maven-plugin</grammars:artifactId>
                        <grammars:version>1.6.7</grammars:version>
                        <grammars:extensions>true</grammars:extensions>
                        <grammars:configuration>
                            <grammars:serverId>ossrh</grammars:serverId>
                            <grammars:nexusUrl>https://oss.sonatype.org/</grammars:nexusUrl>
                            <grammars:autoReleaseAfterClose>true</grammars:autoReleaseAfterClose>
                        </grammars:configuration>
                    </grammars:plugin>
                    <grammars:plugin>
                        <grammars:groupId>org.apache.maven.plugins</grammars:groupId>
                        <grammars:artifactId>maven-source-plugin</grammars:artifactId>
                        <grammars:version>2.4</grammars:version>
                        <grammars:executions>
                            <grammars:execution>
                                <grammars:id>attach-sources</grammars:id>
                                <grammars:goals>
                                    <grammars:goal>jar-no-fork</grammars:goal>
                                </grammars:goals>
                            </grammars:execution>
                        </grammars:executions>
                    </grammars:plugin>
                    <grammars:plugin>
                        <grammars:groupId>org.apache.maven.plugins</grammars:groupId>
                        <grammars:artifactId>maven-javadoc-plugin</grammars:artifactId>
                        <grammars:version>2.10.3</grammars:version>
                        <grammars:executions>
                            <grammars:execution>
                                <grammars:id>attach-javadocs</grammars:id>
                                <grammars:goals>
                                    <grammars:goal>jar</grammars:goal>
                                </grammars:goals>
                            </grammars:execution>
                        </grammars:executions>
                    </grammars:plugin>
                    <grammars:plugin>
                        <grammars:groupId>org.apache.maven.plugins</grammars:groupId>
                        <grammars:artifactId>maven-gpg-plugin</grammars:artifactId>
                        <grammars:version>1.6</grammars:version>
                        <grammars:executions>
                            <grammars:execution>
                                <grammars:id>sign-artifacts</grammars:id>
                                <grammars:phase>verify</grammars:phase>
                                <grammars:goals>
                                    <grammars:goal>sign</grammars:goal>
                                </grammars:goals>
                            </grammars:execution>
                        </grammars:executions>
                    </grammars:plugin>
                </grammars:plugins>
            </grammars:build>
        </grammars:profile>
    </grammars:profiles>
    <grammars:distributionManagement>
        <grammars:snapshotRepository>
            <grammars:id>ossrh</grammars:id>
            <grammars:url>https://oss.sonatype.org/content/repositories/snapshots</grammars:url>
        </grammars:snapshotRepository>
        <grammars:repository>
            <grammars:id>ossrh</grammars:id>
            <grammars:url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</grammars:url>
        </grammars:repository>
    </grammars:distributionManagement>
</grammars:project>